// Configuration for SwiftUI Previews Target - excludes BrazeKit and heavy dependencies

#include "EcosiaBetaDebug.xcconfig"

MOZ_BUNDLE_DISPLAY_NAME = Ecosia Preview
MOZ_PRODUCT_NAME = EcosiaPreview

// Include Settings.bundle for previews (symlink created at ClientPreview/Application -> Client/Application)
INCLUDE_SETTINGS_BUNDLE = YES

// Compilation conditions for preview target (no inheritance to avoid BrazeKit)
SWIFT_ACTIVE_COMPILATION_CONDITIONS = DEBUG SWIFTUI_PREVIEW EXCLUDE_BRAZE

// Optimize for fast compilation and previews
SWIFT_COMPILATION_MODE = singlefile
SWIFT_OPTIMIZATION_LEVEL = -Onone
GCC_OPTIMIZATION_LEVEL = 0
ENABLE_TESTABILITY = YES
ENABLE_BITCODE = NO
